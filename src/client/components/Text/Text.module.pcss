.Text {
    color: var(--text-color);
    font-size: var(--text-size);
    font-weight: var(--text-weight);
}

.Text_strike {
    text-decoration: line-through;
}

.Text_ellipsis {
    overflow: hidden;
    text-overflow: ellipsis;
}

.Text_lines {
    display: -webkit-box;
    -webkit-line-clamp: var(--text-lines);
    -webkit-box-orient: vertical;
}
