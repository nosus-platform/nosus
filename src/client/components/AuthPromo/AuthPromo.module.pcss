.AuthPromo {
    position: relative;
    box-sizing: border-box;

    padding: var(--gap-l);

    width: 100%;
    height: 100%;
    min-height: 100%;
}

.AuthPromoContent {
    box-sizing: border-box;
    border-radius: var(--radius-l);

    padding: 0 var(--gap-l) var(--gap-l);

    width: 100%;
    height: 100%;
}

@media (prefers-color-scheme: dark) {
    .AuthPromoContent {
        background: linear-gradient(45deg, var(--promo) 0%, var(--primary-500) 80%);
    }
}

@media (prefers-color-scheme: light) {
    .AuthPromoContent {
        background: linear-gradient(235deg, var(--promo) 0%, var(--primary-500) 80%);
    }
}

.AuthPromoTitle {
    color: var(--promo-text);
}

.AuthPromoDescription {
    margin-top: var(--gap-l);
    color: var(--promo-text);
}

.AuthPromoList {
    position: absolute;
    bottom: var(--gap-l);

    padding-top: var(--gap-l);
    padding-bottom: var(--gap-l);
    width: 330px;
}

.AuthPromoListItemLink {
    display: flex;
    justify-content: space-between;
    align-items: center;
    transition:
        color,
        background-color 100ms ease-in;
    margin-left: calc(-1 * var(--gap-s));
    border-radius: var(--radius-m);

    padding: var(--gap-s) var(--gap-s);
    color: var(--promo-text);

    &:hover {
        background-color: var(--promo-interactive);
        color: var(--blue-200);

        & .AuthPromoListItemArrowIcon {
            visibility: visible;
        }
    }
}

.AuthPromoListItemLinkContent {
    display: flex;
    align-items: center;
}

.AuthPromoListItemIcon {
    display: inline-block;

    margin-right: var(--gap-s);

    width: 20px;
    height: 20px;
}

.AuthPromoListItemArrowIcon {
    align-self: flex-end;
    visibility: hidden;

    width: 16px;
    height: 16px;
}
