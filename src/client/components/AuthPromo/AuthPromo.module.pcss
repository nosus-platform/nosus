.AuthPromo {
    position: relative;
    box-sizing: border-box;

    width: 100%;
    height: 100%;
    min-height: 100%;

    padding: var(--gap-l);
}

.AuthPromoContent {
    box-sizing: border-box;

    width: 100%;
    height: 100%;

    padding: 0 var(--gap-l) var(--gap-l);

    border-radius: var(--radius-l);

    background-color: var(--promo);
}

.AuthPromoTitle {
    color: var(--promo-text);
}

.AuthPromoDescription {
    margin-top: var(--gap-l);

    color: var(--promo-text);
}
