.Link {
    transition: color 200ms ease-in;
}

.Link_primary {
    color: var(--text-primary);
    text-decoration-line: none;

    &:hover {
        color: var(--blue-500);
    }
}

.Link_inline {
    --link-color: inherit;
    color: var(--link-color);
    text-decoration-line: underline;

    &:hover {
        color: var(--blue-500);
    }
}

.Link_secondary {
    color: var(--text-secondary);
    text-decoration-line: none;

    &:hover {
        color: var(--text-primary);
    }
}
